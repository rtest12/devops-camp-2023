/* 
  ┌──────────────────────────────────────────────────────────────────────────────────────────────────────────────────┐
  │ env=specific configuration variables                                                                             │
  └──────────────────────────────────────────────────────────────────────────────────────────────────────────────────┘
 */

client    = "maxim-omelchenko"
project   = "environments"
use_redis = false

/* 
  ┌──────────────────────────────────────────────────────────────────────────────────────────────────────────────────┐
  │ nginx configuration variables                                                                                    |
  └──────────────────────────────────────────────────────────────────────────────────────────────────────────────────┘
 */

nginx = {
  image = "nginx:latest"
  container_ports = {
    internal = "80"
    external = "8000"
  }
  keep_locally      = false
  container_volumes = []
}

/* 
  ┌──────────────────────────────────────────────────────────────────────────────────────────────────────────────────┐
  │ redis configuration variables                                                                                    │
  └──────────────────────────────────────────────────────────────────────────────────────────────────────────────────┘
 */

redis = {
  image = "redis:latest"
  container_ports = {
    internal = "6379"
    external = "6379"
  }
  keep_locally = false
}

/* 
  ┌──────────────────────────────────────────────────────────────────────────────────────────────────────────────────┐
  │ docker-related variables                                                                                         │
  └──────────────────────────────────────────────────────────────────────────────────────────────────────────────────┘
 */

container_image_keep_locally = false
container_volumes            = []
container_ports = {
  internal = ""
  external = ""
}
